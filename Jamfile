alias sdl        : /site-config//sdl ;
alias sdl_main   : /site-config//sdl_main ;
alias stb_image  : ../stb_image//stb_image ;
alias stb_sbox   : ../stb_sbox//stb_sbox ;
alias stb_vorbis : ../stb_vorbis//stb_vorbis ;

exe arithmetix
    :
        [ glob *.cpp ]
        sdl sdl_main stb_image stb_sbox stb_vorbis
    :
        <variant>release:<runtime-link>static
        <variant>release:<user-interface>gui
        <variant>release:<define>NDEBUG ;

exe bbox : [ glob box/*.cpp ] stb_sbox ;

stage dist : arithmetix ;
